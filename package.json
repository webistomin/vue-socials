{
  "name": "vue-socials",
  "version": "0.1.0",
  "author": {
    "name": "Alexey Istomin",
    "email": "webistomin@gmail.com",
    "url": "https://github.com/webistomin"
  },
  "description": "Social media share buttons and counts for Vue.js",
  "keywords": [
    "social",
    "share",
    "sharing",
    "share-buttons",
    "social-buttons",
    "social-share",
    "vkontakte",
    "mailru",
    "odnoklassniki",
    "facebook",
    "twitter",
    "messenger",
    "linkedin",
    "reddit",
    "tumblr",
    "telegram",
    "whatsapp"
  ],
  "main": "dist/vue-socials.cjs.js",
  "browser": "dist/vue-socials.esm.js",
  "module": "dist/vue-socials.esm.js",
  "exports": {
    ".": {
      "browser": "./dist/vue-socials.esm.js",
      "require": "./dist/vue-socials.cjs.js",
      "import": "./dist/vue-socials.esm.js",
      "default": "./dist/vue-socials.esm.js"
    },
    "./": "./",
    "./package.json": "./package.json"
  },
  "unpkg": "dist/vue-socials.iife.js",
  "jsdelivr": "dist/vue-socials.iife.js",
  "types": "dist/types/vue-socials.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "reveal": true,
  "sideEffects": false,
  "scripts": {
    "dev": "start-storybook -p 3000",
    "prebuild": "rimraf dist",
    "build": "run-s prebuild build:all build:typings",
    "build:all": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:esm": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format esm",
    "build:iife": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife",
    "build:size": "run-s prebuild build:all check-size",
    "build:typings": "tsc -p tsconfig.package.json --declaration --declarationDir dist/types --emitDeclarationOnly",
    "build:storybook": "build-storybook",
    "lint": "run-s eslint:write ls:lint",
    "eslint:write": "eslint --ext .js,.vue,.ts --ignore-path .gitignore . --max-warnings 0",
    "ls:lint": "npx @ls-lint/ls-lint",
    "tree-shake": "agadoo",
    "check-size": "size-limit",
    "release": "dotenv release-it",
    "create-component": "ts-node ./scripts/create-component/index.ts"
  },
  "peerDependencies": {
    "vue": "^2.6.12"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@ls-lint/ls-lint": "^1.9.2",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@size-limit/preset-small-lib": "^4.9.1",
    "@storybook/addon-a11y": "^6.1.15",
    "@storybook/addon-actions": "^6.1.15",
    "@storybook/addon-essentials": "^6.1.15",
    "@storybook/addon-links": "^6.1.15",
    "@storybook/addons": "^6.1.15",
    "@storybook/theming": "^6.1.15",
    "@storybook/vue": "^6.1.15",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "agadoo": "^2.0.0",
    "babel-loader": "^8.2.2",
    "consola": "^2.15.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-vue": "^7.5.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "lodash.findindex": "^4.6.0",
    "minimist": "^1.2.5",
    "node-plop": "^0.26.2",
    "npm-run-all": "^4.1.5",
    "release-it": "^14.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^5.1.9",
    "size-limit": "^4.9.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "vue": "^2.6.12",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12"
  },
  "engines": {
    "node": ">= 14.15.4",
    "npm": ">= 6.14.7"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webistomin/vue-socials/issues"
  },
  "homepage": "https://github.com/webistomin/vue-socials#readme",
  "repository": {
    "type": "git",
    "url": "githttps://github.com/webistomin/vue-socials.js.git"
  }
}
