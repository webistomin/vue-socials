{
  "compilerOptions": {
  "target": "ES2019",
    "module": "ESNext",
    "strict": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
    "node",
    "vue"
  ],
    "paths": {
    "@/*": [
      "dist/types"
    ]
  },
  "lib": [
    "esnext",
    "dom",
    "dom.iterable",
    "scripthost"
  ]
},
  "include": [
  "src/**/*.ts",
],
  "exclude": [
  "node_modules",
  "src/**/tests/**",
  "src/**/docs/**",
  "src/vue-socials.ts",
  "src/vue-socials-esm.ts",
]
}
